<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
>
    <androidx.cardview.widget.CardView
                                       android:layout_width="fill_parent"
                                       android:layout_height="wrap_content"
                                       app:cardCornerRadius="6.0dip" app:cardElevation="2.0dip"
                                       app:cardUseCompatPadding="true">

        <LinearLayout android:orientation="horizontal" android:padding="@dimen/spacing_large"
                      android:layout_width="fill_parent" android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="124dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Directorio Padre"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                    android:textColor="@color/indigo_900"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/parentid_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Directorio Padre"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                    android:textColor="@color/grey_40" />

            </LinearLayout>

            <View
                android:layout_width="4dp"
                android:layout_height="2dp" />

            <View
                android:id="@+id/view"
                android:layout_width="4dp"
                android:layout_height="2dp" />

            <LinearLayout
                android:layout_width="118dp"
                android:layout_height="36dp"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Titulo"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                    android:textColor="@color/indigo_900"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/titulo_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Titulo"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                    android:textColor="@color/grey_40" />

            </LinearLayout>

            <View
                android:id="@+id/view3"
                android:layout_width="4dp"
                android:layout_height="2dp" />

            <LinearLayout
                android:layout_width="131dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Url"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                    android:textColor="@color/indigo_900"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/url_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Url"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                    android:textColor="@color/grey_40" />

            </LinearLayout>

            <View
                android:id="@+id/view4"
                android:layout_width="4dp"
                android:layout_height="2dp"
                android:layout_weight="1.0" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>