<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Newsletters.newsletterUIFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="613dp"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="397dp"
            android:layout_height="55dp"
            android:text="Registro Newsletter"
            android:textAlignment="center"
            android:textColor="#E41F18"
            android:textColorLink="#E41F18"
            android:textSize="30dp"
            tools:layout_editor_absoluteX="60dp"
            tools:layout_editor_absoluteY="28dp" />

        <EditText
            android:id="@+id/Email"
            style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox.Dense"
            android:layout_width="397dp"
            android:layout_height="52dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/background_rectangle_black"
            android:clickable="true"
            android:drawablePadding="8dp"
            android:focusable="false"
            android:hint="Email"

            android:imeActionId="6"
            android:imeOptions="actionUnspecified"
            android:inputType="date"
            android:maxLines="1"
            android:paddingEnd="20dp"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@+id/ReservaHorario"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="24dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="397dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Temas"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            tools:layout_editor_absoluteX="161dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/ch1"
                    android:layout_width="101dp"
                    android:layout_height="wrap_content"
                    android:text="Deportes"
                    tools:layout_editor_absoluteX="26dp"
                    tools:layout_editor_absoluteY="157dp" />

                <CheckBox
                    android:id="@+id/ch2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cultura"
                    app:layout_constraintTop_toBottomOf="@+id/textView9"
                    tools:layout_editor_absoluteX="152dp" />

                <CheckBox
                    android:id="@+id/ch3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Eventos"
                    tools:layout_editor_absoluteX="261dp"
                    tools:layout_editor_absoluteY="154dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="117dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/ch4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Noticias"
                    tools:layout_editor_absoluteX="26dp"
                    tools:layout_editor_absoluteY="230dp" />

                <CheckBox
                    android:id="@+id/ch5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Música"
                    app:layout_constraintTop_toBottomOf="@+id/ch2"
                    tools:layout_editor_absoluteX="138dp" />

                <CheckBox
                    android:id="@+id/ch6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Actividades"
                    app:layout_constraintTop_toBottomOf="@+id/ch3"
                    tools:layout_editor_absoluteX="245dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="201dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/ch7"
                    android:layout_width="132dp"
                    android:layout_height="wrap_content"
                    android:text="Ferias"
                    app:layout_constraintTop_toBottomOf="@+id/ch4"
                    tools:layout_editor_absoluteX="26dp" />

                <CheckBox
                    android:id="@+id/ch8"
                    android:layout_width="148dp"
                    android:layout_height="wrap_content"
                    android:text="Naturaleza"
                    app:layout_constraintTop_toBottomOf="@+id/ch5"
                    tools:layout_editor_absoluteX="116dp" />

                <CheckBox
                    android:id="@+id/ch9"
                    android:layout_width="163dp"
                    android:layout_height="wrap_content"
                    android:text="Fiestas Regionales"
                    app:layout_constraintTop_toBottomOf="@+id/ch6"
                    tools:layout_editor_absoluteX="238dp" />

                <CheckBox
                    android:id="@+id/ch10"
                    android:layout_width="190dp"
                    android:layout_height="58dp"
                    android:text="Manconmunidad Lácara Los Baldíos"
                    app:layout_constraintTop_toBottomOf="@+id/ch8"
                    tools:layout_editor_absoluteX="74dp" />

            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btn_guardar"
                    android:layout_width="146dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Guardar"
                    android:textSize="18sp"
                    app:backgroundTint="#e41f18"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.158"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.492" />

                <Button
                    android:id="@+id/btn_cancelar"
                    android:layout_width="146dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Cancelar"
                    android:textSize="18sp"
                    app:backgroundTint="#e41f18"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.822"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.492" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </LinearLayout>


</FrameLayout>