<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
>
    <androidx.cardview.widget.CardView
                                       android:layout_width="fill_parent"
                                       android:layout_height="wrap_content"
                                       app:cardCornerRadius="6.0dip" app:cardElevation="2.0dip"
                                       app:cardUseCompatPadding="true">
        <LinearLayout android:orientation="horizontal" android:padding="@dimen/spacing_large"
                      android:layout_width="fill_parent" android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="166dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nombre"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                    android:textColor="@color/indigo_900"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/Nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                    android:textColor="@color/grey_40" />

            </LinearLayout>

            <View
                android:layout_width="4dp"
                android:layout_height="2dp" />

            <LinearLayout
                android:layout_width="128dp"
                android:layout_height="36dp"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Direccion"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                    android:textColor="@color/indigo_900"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/Direccion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DescripciÃ³n"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                    android:textColor="@color/grey_40" />

            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="4dp"
                android:layout_height="2dp"
                android:layout_weight="1.0" />

            <LinearLayout android:gravity="end" android:orientation="vertical"
                          android:layout_width="wrap_content" android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Poblacion"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="@color/indigo_900"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/Poblacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Poblacion"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                    android:textColor="@color/grey_40" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>